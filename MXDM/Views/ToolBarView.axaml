<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="MXDM.Views.ToolBarView">
  <StackPanel Orientation="Horizontal">

    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Add}" ToolTip.Tip="Add new download" />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Download}" />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=StopCircleOutline}" ToolTip.Tip="Stop" />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Hand}"  />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Delete}" />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Settings}" />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Schedule}" />
    <Button Classes="ToolbarIcon" Content="{materialIcons:MaterialIconExt Kind=Queue}" />
    
  </StackPanel>
</UserControl>
